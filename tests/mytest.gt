# BUG ducplicate procedures are not caught at compile time
proc p(val int in, ref int out)
begin
    write "\n";
    write "proc p";
    write "\n";
    write "passed val arg: ";
    write in;
    write "\n";
    write "passed reference arg: ";
    #BUG register not valid when trying to access var: out
    write out;
    write "\n";
end


